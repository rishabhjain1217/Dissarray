<BorderPane fx:id="endGamePane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="EndGameController">
    <bottom>
        <HBox alignment="CENTER" prefHeight="46.0" prefWidth="600.0" spacing="50.0" style="-fx-background-color: cornflowerblue;">
            <children>
                <JFXButton fx:id="quitButton" buttonType="RAISED" mnemonicParsing="false" prefHeight="60.0" prefWidth="100.0" ripplerFill="#ffbf00" style="-fx-background-color:gold ;" text="Quit" textAlignment="CENTER">
                    <effect>
                        <Glow />
                    </effect>
                    <font>
                        <Font size="20.0" />
                    </font></JFXButton>
            <JFXButton fx:id="restartButton" buttonType="RAISED" layoutX="260.0" layoutY="10.0" mnemonicParsing="false" prefHeight="60.0" prefWidth="100.0" ripplerFill="#ffbf00" style="-fx-background-color:gold ;" text="Restart" textAlignment="CENTER">
               <effect>
                  <Glow />
               </effect>
               <font>
                  <Font size="20.0" />
               </font>
            </JFXButton>
            </children>
        </HBox>
    </bottom>
    <center>
        <!--<VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: Purple;">-->
        <VBox fx:id="centerVBox" alignment="CENTER" prefHeight="300.0" prefWidth="600.0" style="-fx-background-color: powderblue;">
            <children>
                <!--<Label fx:id="questionLabel" alignment="CENTER" prefHeight="97.0" prefWidth="600.0" text="Lorem ipsum dolor sit amet consectetur adipiscing elit pretium faucibus, platea ad scelerisque cum iaculis dignissim ut etiam vestibulum, id fringilla pulvinar laoreet consequat accumsan vehicula metus. Per inceptos dapibus faucibus habitant natoque ullamcorper quis sagittis, tellus libero suscipit nullam nunc in massa integer volutpat, metus lacinia blandit proin velit nostra praesent." textAlignment="CENTER" textFill="YELLOW" textOverrun="ELLIPSIS" wrapText="true">-->
                <Label alignment="CENTER" prefHeight="150.0" prefWidth="700.0" text="Game Over" textAlignment="CENTER" textOverrun="ELLIPSIS">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                    <font>
                        <Font name="Nirmala UI" size="45.0" />
                    </font>
                </Label>
                  <Label fx:id="scoreLabel" alignment="CENTER" prefHeight="55.0" prefWidth="159.0" text="Score: 0" textAlignment="JUSTIFY">
                      <font>
                          <Font name="Nirmala UI" size="31.0" />
                      </font>
            </Label>
                <!--<Pane fx:id="renderPane" minHeight="-Infinity" minWidth="-Infinity" prefHeight="180.0" prefWidth="600.0" />-->
                <StackPane fx:id="renderPane" prefHeight="200.0" prefWidth="600.0" />
            </children>
        </VBox>
    </center>
    <top>
        <MenuBar>
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="backMenuItem" mnemonicParsing="false" text="Restart" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
</BorderPane>
